<% @business.reviews.each do |f|%>

	<div class="col s12 m7 l6">
		<div class="card horizontal">
			<div class="card-image">
				<%= image_tag(f.user.user_profile.avatar_url, class: "responsive-img") %>
			</div>
			<div class="card-stacked">
				<div class="card-content">
					<span><%= f.user.user_profile.username%></span>
					<div class="review-rating" data-score="<%= f.ratting %>"></div>
					<p><%= f.comment%></p>
				</div>
				<div class="card-action">
					<%= link_to "Edit", edit_business_review_path(f)%>
				<%= link_to "Delete", business_review_path(f), method: :delete, data: { confirm: "Are you sure?" } %>
				</div>
			</div>
		</div>
	</div>
<% end %>
