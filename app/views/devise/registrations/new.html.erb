<%provide(:title, "| Sign Up")%>
<div class="container">
  <div class="row">
    <div class="col l6 m6 s12 offset-l3 offset-m3">
    <span class="center"><%= link_to image_tag("3", :alt => "logo"), root_path %></span>
      <div class="card z-depth-0">
        <div class="card-content black-text">
          <span class="card-title">Sign Up</span>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            
            <div class="input-field">
              <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
            </div>

            <div class="input-field">
              <%= f.password_field :password, autocomplete: "off", placeholder:"Password"%>
            </div>

            <div class="input-field">
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Password Confirmation"%>
            </div>
            <div class="actions ">
              <%= f.submit "Sign up", :class =>"btn"%>
            </div>
          <% end %>
            <span>have an account? <%= render "devise/shared/links" %></span>
        </div>
      </div>
    </div>
  </div>
</div>



